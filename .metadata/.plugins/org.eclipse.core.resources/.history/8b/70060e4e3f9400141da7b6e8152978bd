package agents;

import jade.core.AID;
import jade.core.Agent;
import jade.core.behaviours.CyclicBehaviour;
import jade.lang.acl.ACLMessage;

public class MessageSenderAgent extends Agent {

	/**
	 * 
	 */
	private static final long serialVersionUID = 214632863175152517L;

	@Override
	protected void setup() {
		System.out.println("Setup called on agent message sender " + getAID().getName());
		addBehaviour(new CyclicBehaviour(this) {
			public CyclicBehaviour(Agent agent) {
				super(agent);
			}
			@Override
			public void action() {
				// TODO Auto-generated method stub
				
			}
		});
		
		sendMessage(new AID("sa@10.0.2.15:1099/JADE", AID.ISLOCALNAME), "12345678");
	}
	
	private void sendMessage(AID receiverAID, String messageContent) {
		ACLMessage message = new ACLMessage(ACLMessage.INFORM);
		message.addReceiver(receiverAID);
		message.setLanguage("English");
		message.setContent(messageContent);
		send(message);
	}
}