	<script type="text/javascript" src="<c:url value='/resources/js/home.js'></c:url>"></script>
	<script type="text/javascript" >
	$(document).ready(function() {
		$("#btn_agent_number").click(	
		function () {
			var table = $("#tbl_util");
			var numberOfAgent = $("#txt_agent_number").val();
			alert(numberOfAgent);
			var header = "<th>";
			for (var i = 0; i < numberOfAgent; i++) {	
				header += "<td>";
				header += "Agent ";
				header += i;
				header += "</td>";
			}
			for (var i = 0; i < numberOfAgent; i++) {	
				header += "<td>";
				header += "Utility ";
				header += i;
				header += "</td>";
			}
			header+="</th>";
			table.append(header);
		});
	}
	</script>
