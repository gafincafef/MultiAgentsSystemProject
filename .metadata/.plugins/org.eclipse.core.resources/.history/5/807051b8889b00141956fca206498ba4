package edu.rits.ma.jade.communication;

import jade.lang.acl.ACLMessage;

public class CommunicationDataStore {
	public static final int STATE_NORMAL = 1;
	public static final int STATE_MESSAGE_RECEIVED = 2;
	public static final int STATE_MESSAGE_SEND = 3;
	
	private int mState = STATE_NORMAL;
	private ACLMessage mReceivedCurrentMessage = null;
	
	public int getState() {
		return mState;
	}

	public void setState(int state) {
		this.mState = state;
	}

	public ACLMessage getCurrentMessage() {
		return mReceivedCurrentMessage;
	}

	public void setCurrentMessage(ACLMessage currentMessage) {
		this.mReceivedCurrentMessage = currentMessage;
	}
	
}
