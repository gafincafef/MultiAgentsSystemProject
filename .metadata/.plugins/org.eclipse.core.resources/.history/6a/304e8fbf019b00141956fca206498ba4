package edu.rits.ma.jade.behaviour;

import jade.core.Agent;
import jade.core.behaviours.Behaviour;
import jade.lang.acl.ACLMessage;

public class MessageReceiverBehaviour extends Behaviour {

	private static final long serialVersionUID = 3107958984819531209L;
	private boolean mMessageReceived = false;
	
	public MessageReceiverBehaviour(Agent agent) {
		setAgent(agent);
	}
	
	@Override
	public void action() {
		ACLMessage message = getAgent().receive();
		if(message != null) {
			
		}
		else {
			block();
		}
	}

	@Override
	public boolean done() {
		return mMessageReceived;
	}

}
