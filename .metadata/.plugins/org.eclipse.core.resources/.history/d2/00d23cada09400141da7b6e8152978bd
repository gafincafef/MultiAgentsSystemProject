package behaviours;

import jade.core.AID;
import jade.core.Agent;
import jade.core.behaviours.CyclicBehaviour;
import jade.lang.acl.ACLMessage;

public class MessageSenderBehaviour extends CyclicBehaviour {

	/**
	 * 
	 */
	private static final long serialVersionUID = 3144764478272362958L;

	public MessageSenderBehaviour(Agent agent) {
		myAgent = agent;
	}
	
	@Override
	public void action() {
		sendMessage(findReceiverAgent(), "12345678");
	}
	
	private AID findReceiverAgent() {
		//TODO Change this method to find from DF agent
		return new AID("sa", AID.ISLOCALNAME);
	}
	
	private void sendMessage(AID receiverAID, String messageContent) {
		ACLMessage message = new ACLMessage(ACLMessage.INFORM);
		message.addReceiver(receiverAID);
		message.setLanguage("English");
		message.setContent(messageContent);
		myAgent.send(message);
	}

}
