package behaviours;

import jade.core.Agent;
import jade.core.behaviours.Behaviour;

public class SampleBehaviour extends Behaviour {

	/**
	 * 
	 */
	private static final long serialVersionUID = 1506345155315090344L;

	public SampleBehaviour(Agent agent) {
		setAgent(agent);
		getAgent().setEnabledO2ACommunication(true, 0);
	}

	@Override
	public void action() {
		System.out.println("Sample action");

		Integer requestValue = getAgent().getO2AInterface(Integer.class);
		if(requestValue != null) {
			try {
				//Put back to controller the value doubled
				myAgent.putO2AObject(requestValue * 2, true);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		else {
			block();
		}
	}

	@Override
	public boolean done() {
		return true;
	}
}
